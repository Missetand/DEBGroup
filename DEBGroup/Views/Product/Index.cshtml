@model  DEBGroup.Models.Product.Index

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.AllProducts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SectorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @if (item.DetailsUrl != null && item.DetailsUrl.Trim() != "")
                {
                    <a href="@item.DetailsUrl">Details</a> 
                }
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }
</table>